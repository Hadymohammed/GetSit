@using GetSit.Data.ViewModels;
@model OTPVM

@{
    Layout = "~/Views/Shared/_Layouts/AuthLayout.cshtml";
}
<link rel="stylesheet" href="~/css/OTP.css" asp-append-version="true" />


<div class="col">
    <div id="popupWindow" class="d-flex align-items-center justify-content-center">
        <div id="popupContent" class="p-4 bg-white">

            <div class="box-header">
                <h2>OTP verification</h2>
                <div class="mt-3">Verify your phone and email to get unlimited services access! </div>
            </div>
            <form id="otpForm" asp-action="OTP">
                <div id="otpInputs" class="mb-4">
                    <input type="text" maxlength="1" asp-for="@Model.op0" class="form-control otp-input" autofocus>
                    <input type="text" maxlength="1" asp-for="@Model.op1" class="form-control otp-input">
                    <input type="text" maxlength="1" asp-for="@Model.op2" class="form-control otp-input">
                    <input type="text" maxlength="1" asp-for="@Model.op3" class="form-control otp-input">
                    <input type="text" maxlength="1" asp-for="@Model.op4" class="form-control otp-input">
                    <input type="text" maxlength="1" asp-for="@Model.op5" class="form-control otp-input">
                </div>
                <div style="text-align: center;">
                    <span asp-validation-for="@Model.OTP" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button id="verifyButton" type="submit" class="btn btn-primary" disabled>Verify</button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/OTPinputs.js"></script>
}

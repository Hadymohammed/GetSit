@using GetSit.Data.ViewModels
@using GetSit.Data.enums

@model ForgetPasswordVM

@{
    Layout = "~/Views/Shared/_Layouts/AuthLayout.cshtml";
}
<div class="col">
    <div class="box-header">
        <h2>Forget Password</h2>
        <div class="mt-3">Enter your email you registered with to get verification</div>
    </div>
    <form asp-action="Index" class="form">
        <div class="row">
            <div class="form-outline mb-2">
                <label class="form-label" asp-for="@Model.Email"></label>
                <input type="email" asp-for="@Model.Email" class="form-control form-control-lg" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-outline mb-2">
                <div class="mb-3">Which account role you are?</div>
                <div class="user-roles">
                    <div>
                        <input type="radio" asp-for="@Model.Role" value="@UserRole.Customer">
                        <label asp-for="@Model.Role">@UserRole.Customer</label>
                    </div>
                    <div>
                        <input type="radio" asp-for="@Model.Role" value="@UserRole.Provider">
                        <label asp-for="@Model.Role">@UserRole.Provider</label>
                    </div>
                </div>
                <span asp-validation-for="@Model.Role" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-outline">
                <input class="purple-btn float-right" type="submit" value="Send Verification">
                <div>Don't have an account? <a asp-action="Register">Register</a></div>
            </div>
        </div>
    </form>
    <div class="dots-navigation">
        <span class="dot dot-active"></span>
        <span class="dot"></span>
        <span class="dot"></span>
    </div>
</div>

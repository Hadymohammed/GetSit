                        <div class="col-md-4 col-xl-3">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Sender Details</h5>
                                </div>
                                <div class="card-body text-center">
                                         class="img-fluid rounded-circle mb-2" width="128" height="128" />
                                    <h5 class="card-title mb-0">@Model.spaceEmployee.FirstName  @Model.spaceEmployee.LastName</h5>
                                </div>

                                <hr class="my-0" />

                                <div class="card-body">
                                    <h5 class="h6 card-title">About</h5>
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-1">
                                            <span data-feather="home" class="feather-sm me-1"></span> Lives
                                            in <a href="#">@Model.spaceEmployee.City</a>
                                        </li>

                                        <li class="mb-1">
                                            <span data-feather="briefcase" class="feather-sm me-1"></span>
                                            Works at <a href="#">@Model.Space.Name</a>
                                        </li>
                                        <li class="mb-1">
                                            <span data-feather="map-pin" class="feather-sm me-1"></span>
                                            From <a href="#">@Model.Space.Country</a>
                                        </li>
                                    </ul>
                                </div>
                                <hr class="my-0" />
                                <div class="card-body">
                                    <h5 class="h6 card-title">Elsewhere</h5>
                                    <ul class="list-unstyled mb-0">
                                        <li class="mb-1"><a href="#">LinkedIn</a></li>
                                        <li class="mb-1"><a href="#">Twitter</a></li>
                                        <li class="mb-1"><a href="#">Facebook</a></li>
                                        <li class="mb-1"><a href="#">Instagram</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-8 col-xl-9">
                            <!-- ----------------------- -->
                            <div class="card">
                                <div class="card-header">

                                    <!-- pfp starts -->
                                    <div class="d-flex align-items-start">
                                        <img src="img/avatars/avatar-4.jpg" class="rounded-circle me-2"
                                             alt="Christina Mason" width="36" height="36">
                                        <div class="flex-grow-1">
                                            <strong>@Model.spaceEmployee.FirstName @Model.spaceEmployee.LastName </strong> Sent you a join request <br>
                                            <small class="text-muted">@Model.hallRequest.Date</small>
                                        </div>
                                    </div>
                                    <!-- pfp ends -->

                                </div>
                                <div class="card-body">
                                    <!-- ------ space details starts here ------ -->
                                    <!-- Name -->
                                    <div class="mb-3">
                                        <label class="form-label">@Model.Space.Name</label>
                                        <div class="border text-sm text-muted p-2 mt-1 mb-3">
                                            Mrs [@Model.spaceEmployee.FirstName @Model.spaceEmployee.LastName ]
                                        </div>
                                    </div>

                                    <!-- Photos -->
                                    <div class="mb-3">
                                        <label for="formFile" class="form-label">Hall Photos</label>
                                        @foreach(var item in Model.Hall.HallPhotos)
                                        {
                                        <div class="row g-0 mt-1">
                                            <div class="col-6 col-md-4 col-lg-4 col-xl-3">
                                                <img src="@Url.Content(item.Url)" alt="Hall Image">
                                                     class="img-fluid pe-2" alt="Unsplash">
                                            </div>
                                        </div>
                                        }
                                    </div>
                                    <!-- Create Space Btn  -->

                                    <div class="mb-3 m-edit">
                                        <!-- Accept  -->
                                        <a asp-action="AcceptRepest" asp-controller="SystemAdminController" asp-route-requestId="@Model.hallRequest.Id" class="btn btn-success">Create Hall</a>

                                        <div>
                                            <!-- Reject -->
                                            <a asp-action="RejectRepest" asp-controller="SystemAdminController" asp-route-requestId="@Model.hallRequest.Id" class="btn btn-danger mr-5">Reject</a>

                                            <!-- The button triggers the message -->
                                            <span>
                                                <a class="btn btn-secondary" data-bs-toggle="collapse"
                                                   href="#collapseExample1" role="button" aria-expanded="false"
                                                   aria-controls="collapseExample">
                                                    Message
                                                </a>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="collapse mt-3" id="collapseExample1">
                                        <div class="card card-body">
                                            <div class="mb-3">
                                                <label for="exampleFormControlInput11"
                                                       class="form-label">Message</label>

                                                <div class="d-flex align-items-start mt-1">
                                                    <a class="pe-3" href="#">
                                                        <img src="img/avatars/avatar-4.jpg" class="rounded-circle me-2"
                                                             alt="Christina Mason" width="36" height="36">
                                                    </a>
                                                    <div class="flex-grow-1">
                                                        <textarea rows="2" type="text"
                                                                  class="form-control border text-sm text-muted p-2 mt-1 form-control mb-3"
                                                                  id="exampleFormControlInput11"
                                                                  placeholder="Enter you message"></textarea>
                                                        <!-- send message  -->
                                                        <span class="btn btn-success">
                                                            send
                                                            message
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- ------ form ends here ------ -->

@using GetSit.Data.ViewModels
@using GetSit.Data.enums
@model ProviderRegisterVM

@{
    Layout = "~/Views/Shared/_Layouts/AuthLayout.cshtml";
}
<div class="col">
    <div class="box-header">
        <h2>Join us</h2>
        <div class="mt-3">Join us add get access to our management tools!</div>
    </div>
    <form asp-action="Index" class="form">
        <div class="row">
            <div class="col-md-6 mb-2">
                <div class="form-outline">
                    <label class="form-label" asp-for="@Model.FirstName"></label>
                    <input type="text" asp-for="@Model.FirstName" class="form-control form-control-lg" />
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 mb-2">
                <div class="form-outline">
                    <label class="form-label" asp-for="@Model.LastName"></label>
                    <input type="text" asp-for="@Model.LastName" class="form-control form-control-lg" />
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-outline mb-2">
                <label class="form-label" asp-for="@Model.Birthdate"></label>
                <input type="date" asp-for="@Model.Birthdate" class="form-control form-control-lg" />
                <span asp-validation-for="@Model.Birthdate" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-outline mb-2">
                <label class="form-label" asp-for="@Model.PhoneNumber"></label>
                <input type="text" asp-for="@Model.PhoneNumber" class="form-control form-control-lg" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-outline mb-2">
                <label class="form-label" asp-for="@Model.Email"></label>
                <input type="email" asp-for="@Model.Email" class="form-control form-control-lg" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-outline">
                <input class="purple-btn float-right" type="submit" value="Next">
                <div>Already have an account? <a asp-action="Login">Login</a></div>
            </div>
        </div>
    </form>
    <div class="dots-navigation">
        <span class="dot dot-active"></span>
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
    </div>
</div>

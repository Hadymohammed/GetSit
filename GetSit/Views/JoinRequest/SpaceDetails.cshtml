@using GetSit.Data.ViewModels
@using GetSit.Data.enums
@model AddSpaceVM

@{
    Layout = "~/Views/Shared/_Layouts/AuthLayout.cshtml";
}
<div class="col">
    <div class="box-header">
        <h2>Space details</h2>
        <div class="mt-3">Add your space general information and we will contact you.</div>
    </div>
    <form asp-action="SpaceDetails" class="form">
        <div class="row">
                <div class="form-outline">
                    <label class="form-label" asp-for="@Model.SpaceName"></label>
                    <input type="text" asp-for="@Model.SpaceName" class="form-control form-control-lg" />
                    <span asp-validation-for="@Model.SpaceName" class="text-danger"></span>
                </div>
        </div>
        <div class="row">
            <div class="form-outline">
                <label class="form-label" asp-for="@Model.SpaceBio">Add description</label>
                <textarea asp-for="SpaceBio" class="form-control" maxlength="400" style="height: 10vh;max-height: 80px;">
                </textarea>
                <span asp-validation-for="@Model.SpaceBio" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-outline col-md-4">
                <label class="form-label" asp-for="@Model.SpaceCountry"></label>
                <input type="text" asp-for="@Model.SpaceCountry" class="form-control form-control-lg" />
                <span asp-validation-for="@Model.SpaceCountry" class="text-danger"></span>
            </div>
            <div class="form-outline col-md-4">
                <label class="form-label" asp-for="@Model.SpaceCity"></label>
                <input type="text" asp-for="@Model.SpaceCity" class="form-control form-control-lg" />
                <span asp-validation-for="@Model.SpaceCity" class="text-danger"></span>
            </div>
            <div class="form-outline col-md-4">
                <label class="form-label" asp-for="@Model.SpaceStreet"></label>
                <input type="text" asp-for="@Model.SpaceStreet" class="form-control form-control-lg" />
                <span asp-validation-for="@Model.SpaceStreet" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-outline mb-2">
                <label class="form-label" asp-for="@Model.SpaceGPSLocation"></label>
                <input type="text" asp-for="@Model.SpaceGPSLocation" class="form-control form-control-lg" />
                <span asp-validation-for="@Model.SpaceGPSLocation" class="text-danger"></span>
            </div>
        </div>
        
        <div class="row">
            <div class="form-outline">
                <input class="purple-btn float-right" type="submit" value="Send Request">
                <div>Already have an account? <a asp-action="Login">Login</a></div>
            </div>
        </div>
    </form>
    <div class="dots-navigation">
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot dot-active"></span>
        <span class="dot"></span>
    </div>
</div>

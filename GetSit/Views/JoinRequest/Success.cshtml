@using GetSit.Data.ViewModels
@using GetSit.Data.enums
@model JoinRequestVM

@{
    Layout = "~/Views/Shared/_Layouts/AuthLayout.cshtml";
}
<div class="col">
    <div class="box-header">
        <h2 style="color: green;">
            Success
        </h2>
        <div class="mt-3">Your request has been sent successfully, we will contact you soon!</div>
    </div>
    <div class="form">
        <div class="row">
            <div class="col-md-6 mb-2">
                <div class="form-outline">
                    <label class="form-label" asp-for="@Model.FirstName"></label>
                    <input type="text" asp-for="@Model.FirstName" class="form-control form-control-lg" readonly />
                </div>
            </div>
            <div class="col-md-6 mb-2">
                <div class="form-outline">
                    <label class="form-label" asp-for="@Model.LastName"></label>
                    <input type="text" asp-for="@Model.LastName" class="form-control form-control-lg" readonly />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-outline mb-2">
                <label class="form-label" asp-for="@Model.Birthdate"></label>
                <input type="date" asp-for="@Model.Birthdate" class="form-control form-control-lg" readonly />
            </div>
        </div>
        <div class="row">
            <div class="form-outline mb-2">
                <label class="form-label" asp-for="@Model.PhoneNumber"></label>
                <input type="text" asp-for="@Model.PhoneNumber" class="form-control form-control-lg" readonly />
            </div>
        </div>
        <div class="row">
            <div class="form-outline mb-2">
                <label class="form-label" asp-for="@Model.Email"></label>
                <input type="email" asp-for="@Model.Email" class="form-control form-control-lg" readonly />
            </div>
        </div>
        <!--Space-->
        <div class="row">
            <div class="col-md-6 mb-2">
                <div class="form-outline">
                    <label class="form-label" asp-for="@Model.SpaceName"></label>
                    <input type="text" asp-for="@Model.SpaceName" class="form-control form-control-lg" readonly />
                </div>
            </div>
            <div class="col-md-6 mb-2">
                <div class="form-outline">
                    <label class="form-label" asp-for="@Model.SpaceBio">Add description</label>
                    <input type="text" asp-for="@Model.SpaceBio" class="form-control form-control-lg" readonly/>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-outline col-md-4 mb-2">
                <label class="form-label" asp-for="@Model.SpaceCountry"></label>
                <input type="text" asp-for="@Model.SpaceCountry" class="form-control form-control-lg" readonly />
            </div>
            <div class="form-outline col-md-4 mb-2">
                <label class="form-label" asp-for="@Model.SpaceCity"></label>
                <input type="text" asp-for="@Model.SpaceCity" class="form-control form-control-lg" readonly />
            </div>
            <div class="form-outline col-md-4 mb-2">
                <label class="form-label" asp-for="@Model.SpaceStreet"></label>
                <input type="text" asp-for="@Model.SpaceStreet" class="form-control form-control-lg" readonly />
            </div>
        </div>
        <div class="row">
        </div>
        <div class="row">
            <div class="form-outline mb-2">
                <label class="form-label" asp-for="@Model.SpaceGPSLocation"></label>
                <input type="email" asp-for="@Model.SpaceGPSLocation" class="form-control form-control-lg" readonly/>
            </div>
        </div>

        <div class="row">
            <div class="form-outline" style="text-align: center;">
                <a class="btn purple-btn" asp-action="Index" asp-controller="Explore">Explore</a>
            </div>
        </div>
    </div>
    <div class="dots-navigation">
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot dot-active"></span>
    </div>
</div>

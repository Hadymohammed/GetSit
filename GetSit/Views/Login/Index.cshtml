@model Customer

<div class="container-box">
    <div class="bg-img">
        <img  src="~/resources/site/AuthBackgound.png"/>
    </div>
    <div class="container-side">
            <div class="col">
               <div class="box-header">
                   <h2>Login</h2>
                    <div class="mt-3">Sign up for free to access any of our services </div>
                </div>
               <form action="Login" class="form">
                    <div class="row">
                        <div class="form-outline mb-2">
                            <label class="form-label" asp-for="@Model.Email"></label>
                            <input type="email" asp-for="@Model.Email" class="form-control form-control-lg" />
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-outline mb-4">
                            <div>
                                <label class="form-label" asp-for="@Model.Password"></label>
                            <div class="password-show">
                                    <span class="fa fa-fw fa-eye show-icon"></span>
                                    <span class="show-text">Show</span>
                                </div>
                            </div>
                            <input type="password" asp-for="@Model.Password" class="form-control form-control-lg" />
                            <span asp-validation-for="@Model.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-outline">
                            <input class="purple-btn float-right" type="submit" value="Login" >
                            <div>Don't have an account? <a asp-controller="Register">Register</a></div>
                        </div>
                    </div>
               </form>
           </div>
    </div>
</div>
@section scripts {
    <script>
        $(".password-show").click(function () {

            $(".show-icon").toggleClass("fa-eye fa-eye-slash");
            var text=$(".show-text")[0];
            if(text.innerHTML==="Show")
                text.innerHTML = "Hide";
            else text.innerHTML = "Show";

            var input = $("#Password");
            if (input.attr("type") == "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
        });

    </script>
}

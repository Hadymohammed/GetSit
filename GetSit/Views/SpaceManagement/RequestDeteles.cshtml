@model HallRequest
@section styles {
    <link href="~/css/app.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet"/>

}
<div class="wrapper">
    <div class="main">


        <main class="content">
            <div class="container-fluid p-0">

                <div class="mb-3">
                    <h1 class="h3 d-inline align-middle">Request</h1>
                </div>
                <div class="row">
                    <div class="col-md-4 col-xl-3">
                        <div class="card mb-3">
                            <div class="card-header">
                                <h5 class="card-title mb-0">Space Details</h5>
                            </div>
                            <div class="card-body text-center">
                                <img src="@Model.Hall.Space.Photos.First().Url" alt="Christina Mason"
                                     class="img-fluid rounded-circle mb-2" width="128" height="128" />
                                <h5 class="card-title mb-0">@Model.Hall.Space.Name</h5>
                                <div class="text-muted mb-2">@Model.Hall.Space.Bio</div>
                            </div>

                            <hr class="my-0" />

                        </div>
                    </div>

                    <div class="col-md-8 col-xl-9">
                        <!-- ----------------------- -->
                        <div class="card">
                            <div class="card-header">

                                <!-- pfp starts -->
                                <div class="d-flex align-items-start">
                                    <img src="@Model.Hall.Space.Photos.First().Url" class="rounded-circle me-2"
                                         alt="Christina Mason" width="36" height="36">
                                    <div class="flex-grow-1">
                                        <strong>@Model.Hall.Space.Name</strong> Sent to a add hall request <br>
                                        <small class="text-muted">@Model.Date.Day.ToString("dddd")  @Model.Date.Hour</small>
                                    </div>
                                </div>
                                <!-- pfp ends -->

                            </div>
                            <div class="card-body">
                                <!-- ------ space details starts here ------ -->
                                
                                

                                <!-- Photos -->
                                <div class="mb-3">
                                    <label for="formFile" class="form-label">Space Photos</label>
                                    <div class="row g-0 mt-1">
                                        @foreach(var photo in Model.Hall.HallPhotos)
                                        {
                                            <div class="col-6 col-md-4 col-lg-4 col-xl-3">
                                                <img src="@photo.Url"
                                                     class="img-fluid pe-2" alt="Unsplash">
                                            </div>
                                        }
                                        
                                        
                                    </div>
                                </div>

                                <!-- Description -->
                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <div class="border text-sm text-muted p-2 mt-1 mb-3">
                                        @Model.Hall.Description
                                    </div>
                                </div>

                                <!-- Category  -->
                                <div class="mb-3">
                                    <label class="form-label">Hall Category</label>
                                    <div class="border text-sm text-muted p-2 mt-1 mb-3">
                                        @Model.Hall.Type
                                    </div>
                                </div>
                                <!-- Capacity  -->
                                <div class="mb-3">
                                    <label class="form-label">Hall Capacity</label>
                                    <div class="border text-sm text-muted p-2 mt-1 mb-3">
                                        @Model.Hall.Capacity
                                    </div>
                                </div>
                                <!-- Cost  -->
                                <div class="mb-3">
                                    <label class="form-label">Hall Cost per Hour</label>
                                    <div class="border text-sm text-muted p-2 mt-1 mb-3">
                                        @Model.Hall.Capacity
                                    </div>
                                </div>
                                <!-- Facilites  -->
                                <div class="mb-3">
                                    <label class="form-label">Facilites</label>
                                    @foreach(var facility in Model.Hall.HallFacilities)
                                    {
                                        <div class="border text-sm text-muted p-2 mt-1 mb-3">
                                            @facility.Facility
                                        </div>
                                    }
                                    
                                </div>



                                

                                

                                <br><br>
                               


                                <!-- Create Space Btn  -->

                                <div class="mb-3 m-edit">
                                    <!-- Accept  -->
                                    <div class="btn btn-primary">  Edit  </div>

                                    <div>
                                        <!-- Reject -->
                                        <span class="btn btn-danger mr-5">Reject</span>

                                        <!-- The button triggers the message -->
                                        @if (Model.comment != null)
                                        {
                                            <span>
                                                <a class="btn btn-secondary" data-bs-toggle="collapse"
                                                href="#collapseExample1" role="button" aria-expanded="false"
                                                aria-controls="collapseExample">
                                                    Show Message
                                                </a>
                                            </span>
                                        }
                                    </div>
                                </div>

                                <div class="collapse mt-3" id="collapseExample1">
                                    <div class="card card-body">
                                        <div class="mb-3">
                                            <label for="exampleFormControlInput11"
                                                   class="form-label">Message</label>

                                            <div class="d-flex align-items-start mt-1">
                                                
                                                
                                            <div class="flex-grow-1">
                                                <div rows="2" type="text"
                                                    class="form-control border text-sm text-muted p-2 mt-1 form-control mb-3"
                                                    id="exampleFormControlInput11"
                                                    placeholder="Enter you message">@Model.comment</div>
                                                        
                                                 </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- ------ form ends here ------ -->
                            </div>


                        </div>
                        <!-- ----------------------- -->
                    </div>
                </div>

            </div>
        </main>

    </div>
</div>

